<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.instagramapp.authorization.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nameFragment"
        android:name="com.example.instagramapp.NameFragment"
        android:label="fragment_name"
        tools:layout="@layout/fragment_name" />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.instagramapp.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.example.instagramapp.PasswordFragment"
        android:label="fragment_password"
        tools:layout="@layout/fragment_password" />
    <fragment
        android:id="@+id/saveInfoFragment"
        android:name="com.example.instagramapp.SaveInfoFragment"
        android:label="fragment_save_info"
        tools:layout="@layout/fragment_save_info" />
    <fragment
        android:id="@+id/getBirthdayFragment"
        android:name="com.example.instagramapp.GetBirthdayFragment"
        android:label="fragment_get_birthday"
        tools:layout="@layout/fragment_get_birthday" />
    <fragment
        android:id="@+id/createUsernameFragment"
        android:name="com.example.instagramapp.CreateUsernameFragment"
        android:label="fragment_create_username"
        tools:layout="@layout/fragment_create_username" />
    <fragment
        android:id="@+id/mobileNumberFragment"
        android:name="com.example.instagramapp.MobileNumberFragment"
        android:label="fragment_mobile_number"
        tools:layout="@layout/fragment_mobile_number" />
    <fragment
        android:id="@+id/emailFragment"
        android:name="com.example.instagramapp.EmailFragment"
        android:label="fragment_email"
        tools:layout="@layout/fragment_email" />
    <fragment
        android:id="@+id/mobileCodeFragment"
        android:name="com.example.instagramapp.MobileCodeFragment"
        android:label="fragment_mobile_code"
        tools:layout="@layout/fragment_mobile_code" />
    <fragment
        android:id="@+id/termsAndPoliciesFragment"
        android:name="com.example.instagramapp.TermsAndPoliciesFragment"
        android:label="fragment_terms_and_policies"
        tools:layout="@layout/fragment_terms_and_policies" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.instagramapp.authorization.signUp.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.instagramapp.coreFeatures.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.instagramapp.coreFeatures.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/addImageFragment"
        android:name="com.example.instagramapp.coreFeatures.addImage.AddImageFragment"
        android:label="fragment_add_image"
        tools:layout="@layout/fragment_add_image" />
    <fragment
        android:id="@+id/reelsFragment"
        android:name="com.example.instagramapp.coreFeatures.reels.ReelsFragment"
        android:label="fragment_reels"
        tools:layout="@layout/fragment_reels" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.instagramapp.coreFeatures.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>